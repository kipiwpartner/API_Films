<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lister"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10px"
        android:maxWidth="24px"
        android:maxHeight="24px"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10px"
        android:layout_weight="1"
        >
        <TextView android:id="@+id/idl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:paddingLeft="50px"
            />
        <TextView android:id="@+id/mtitre"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="50px"
            />
        <TextView android:id="@+id/mauteur"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="18sp"
            android:paddingLeft="50px"
            />
        <TextView android:id="@+id/mannee"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="18sp"
            android:paddingLeft="50px"
            />
        <TextView android:id="@+id/mpages"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="18sp"
            android:paddingLeft="50px"
            />

    </LinearLayout>

</LinearLayout>
